<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 
	
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="100.0" />

    <skybox
       size="10 10 10"
       center="0 0 0"
       emissive="3.0 3.0 3.0 1.0"
       intensity="2.0"
       front="2.0"
       back="4.0"
       up="1.0"
       down="2.3"
       left="4.3"
       right="2.7" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="0 15 15" 
            target="0.0 15 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="-5" /> 
    </cameras> 

    <textures>        
        <texture id="wallTex" filepath="scenes/t07g08/textures/wallTex.jpg" />
		<texture id="floorTex" filepath="scenes/t07g08/textures/floorTex.jpg" />
		<texture id="shelfTex" filepath="scenes/t07g08/textures/shelfTex.jpg" />
		<texture id="supportLegTex" filepath="scenes/t07g08/textures/supportLegTex.jpg" />
		<texture id="treeTex" filepath="scenes/t07g08/textures/treeTex.jpg" />
		<texture id="vaseTex" filepath="scenes/t07g08/textures/vaseTex.jpg" />
        <texture id="matTex" filepath="scenes/t07g08/textures/matTex.jpg" />
        <texture id="mirrorBallTex" filepath="scenes/t07g08/textures/mirrorBallTex.jpg" />
        <texture id="footballTex" filepath="scenes/t07g08/textures/footballTex.jpg" />
        <texture id="basketballTex" filepath="scenes/t07g08/textures/basketballTex.jpg" />

    </textures> 

    <materials> 

        <material id="shelfMaterial" 
            color="0.8 0.8 0.8 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="shelfTex" 
            texlength_s="1" 
            texlength_t="1" />
			
		<material id="wall" 
            emissive="0.0 0.0 0.0 1" 
			color="0.8 0.8 0.8 1.0" 
            specular="0 0 0 0" 
            shininess="0" 
            textureref="wallTex" 
            texlength_s="15" 
            texlength_t="8" 
            twosided = "true" />
		
		<material id="floorMaterial" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="floorTex" 
            texlength_s="15" 
            texlength_t="15" 
            twosided = "true" />
		
		<material id="supportLegMaterial" 
            emissive="0.0 0.0 0.0 1" 
           color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="supportLegTex" 
            texlength_s="1" 
            texlength_t="1" />
		
		<material id="tree" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="treeTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />
			
		<material id="vase" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="vaseTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />

        
        
        <material id="mat" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="matTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />
        <material id="mirrorBallMaterial" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="mirrorBallTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />
        <material id="footballMaterial" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="footballTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />
        <material id="basketballMaterial" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="basketballTex" 
            texlength_s="1" 
            texlength_t="1"
            shading = "flat" />
			
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
                <noderef id="leftWall" /> 
				<noderef id="rightWall" /> 
				<noderef id="floor" /> 
				<noderef id="shelf" /> 
				 
				<noderef id="tree" /> 
                <noderef id="tree2" /> 
				<noderef id="mat" />
                <noderef id="mirrorBall" />
                <noderef id="football" />
                <noderef id="basketball" />

                <pointlight id="light1" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="33.75 37.3 33.75" 
                /> 

                <pointlight id="light2" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="100.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="11.25 7.3 3.75"
                /> 
			              
                <spotlight id="light3" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="2 2 4" 
                    target="0 0 0"
                    penumbra="1.0"
                    angle="10.0" 
                /> 

                <directionallight id="light4" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="5.0"
                    castshadow="true"
                    position="10 5 7" 
                />

                
            </children> 
        </node>
		
		<node id="rectangle1"> 

            <transforms>
				<translate value3="0 0 -0.5" />
				<rotate value3="0 180.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive> 
            </children> 
        </node>
		
		<node id="rectangle2"> 

            <transforms>
				<translate value3="0 0 0.5" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle3"> 

            <transforms>
				<translate value3="0 -0.5 0" />
				<rotate value3="90 0.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle4"> 

            <transforms>
				<translate value3="0 0.5 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle5"> 

            <transforms>
				<translate value3="-0.5 0 0" />
				<rotate value3="0.0 -90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle6"> 
            <transforms>
				<translate value3="0.5 0 0" />
				<rotate value3="0.0 90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="unitCube">
            <children>            
				<!-- Back -->
                <noderef id="rectangle1" /> 
				<!-- Front -->
				<noderef id="rectangle2" /> 
				<!-- Bottom -->
				<noderef id="rectangle3" />
				<!-- Top -->
				<noderef id="rectangle4" />
				<!-- Left -->				
				<noderef id="rectangle5" />
				 <!-- Right -->
				<noderef id="rectangle6" />
            </children> 
        </node>
		
		<node id="leg">
			<transforms>
				<scale value3="0.06 2.25 0.06" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>
		
		<node id="centralLeg" castshadows="true">
			<transforms>
				<translate value3="0 -0.6 0" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 

            <materialref id="supportLegMaterial" />
        </node>
		
		<node id="shelfTop" castshadows="true" receiveshadows="true">
			<transforms>
				<translate value3="0 0.48 0" />
				<scale value3="1 0.08 0.5" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>
		
		<node id="shelf">
			<transforms>
				<translate value3="0.8 4 10" />
				<rotate value3="0 90 0.0" />
				<scale value3="4.5 2.5 3" />

            </transforms> 

			<materialref id="shelfMaterial" />
			
            <children>             
                <noderef id="shelfTop" />
				<noderef id="centralLeg" />
            </children> 
        </node>

        <node id="oval">
            <children>             
                <primitive>
                    <cylinder base="0.75" top="0.75" height="0.1" slices="32" stacks="32" />
                </primitive>

            </children>
        </node>

        <node id="mat" receiveshadows="true">
            <transforms>
                <translate value3="7 0.13 7" />
                <scale value3="7.5 1 7" />
            </transforms>

            <materialref id="mat" />

            <children>
                <noderef id="oval" />
            </children>
        </node>
		
		<node id="floor" receiveshadows="true">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="floorMaterial" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 15" />
                </primitive>
            </children> 
        </node>
		
		<node id="wall" receiveshadows="true">
			<transforms>
				<rotate value3="-90 0.0 0.0" />
            </transforms> 
			
            <children>             
                <noderef id="rectangle1" />
            </children> 
        </node>
		
		<node id="leftWall">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="0.0 90 0.0" />
            </transforms> 

			<materialref id="wall" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 8" />
                </primitive>
            </children> 
        </node>
		
		<node id="rightWall">
			<materialref id="wall" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 8" />
                </primitive>
            </children> 
        </node>

        <node id="ball" castshadows="true">
            <children>             
                <primitive>
                    <sphere radius="0.5" slices="32" stacks="32" />
                </primitive>

            </children>
        </node>

        <node id="mirrorBall" castshadows="true">
            <transforms>
                <translate value3="2 9 2" />
                <scale value3="2 2 2" />
            </transforms>

            <materialref id="mirrorBallMaterial" />

            <children>
                <noderef id="ball" />
            </children>
        </node>

        <node id="football" castshadows="true">
            <transforms>
                <translate value3="7.1 1 7" />
                <scale value3="1.5 1.5 1.5" />
            </transforms>

            <materialref id="footballMaterial" />

            <children>
                <noderef id="ball" />
            </children>
        </node>

        <node id="basketball" castshadows="true">
            <transforms>
                <translate value3="1 5.8 9" />
                <scale value3="1 1 1" />
            </transforms>

            <materialref id="basketballMaterial" />

            <children>
                <noderef id="ball" />
            </children>
        </node>
		
		<node id="vase" castshadows="true">
			<materialref id="vase" />
			
            <children>             
                <primitive>
                    <cylinder base="0.75" top="1.3" height="1.9" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>

        <node id="vase2" castshadows="true">
			<materialref id="supportLegMaterial" />
			
            <children>             
                <primitive>
                    <cylinder base="0.75" top="1.3" height="1.9" slices="32" stacks="32" />
                </primitive>
            </children> 
        </node>
		
		<node id="leafs">
			<transforms>
				<translate value3="0 4.5 0" />
                <scale value3="1.5 3.5 1.5" />
            </transforms> 
			
			<materialref id="tree" />
			
            <children>             
                <primitive>
                    <cylinder base="0.9" top="0" height="2" slices="32" stacks="32" />
                </primitive>

            </children> 
        </node>
		
		<node id="tree">
			<transforms>
				<translate value3="2 0.7 2" />
				<rotate value3="0.0 -130 0"/>
            </transforms> 
			
            <children>             
                <noderef id="vase" />
				<noderef id="leafs" />
                <primitive>
                    <nurbs degree_u="1" degree_v="1" parts_u="20" parts_v="20" distance="0.0">
                        <controlpoint xx="0" yy="0" zz="0" />
                        <controlpoint xx="0" yy="0" zz="1" />
                        <controlpoint xx="1" yy="0" zz="0" />
                        <controlpoint xx="1" yy="0" zz="1" />
                    </nurbs>
                </primitive>
                <primitive>
                    <box xyz1="-0.5 -0.5 -0.5" xyz2="0.5 0.5 0.5" />
                </primitive>

            </children> 
        </node>

        <node id="tree2">
			<transforms>
				<translate value3="1 5.5 11" />
				<rotate value3="0.0 -130 0"/>
                <scale value3="0.2 0.2 0.2" />
            </transforms> 
			
            <children>             
                <noderef id="vase2" />
				<noderef id="leafs" />
                <primitive>
                    <nurbs degree_u="1" degree_v="1" parts_u="20" parts_v="20" distance="0.0">
                        <controlpoint xx="0" yy="0" zz="0" />
                        <controlpoint xx="0" yy="0" zz="1" />
                        <controlpoint xx="1" yy="0" zz="0" />
                        <controlpoint xx="1" yy="0" zz="1" />
                    </nurbs>
                </primitive>
                <primitive>
                    <box xyz1="-0.5 -0.5 -0.5" xyz2="0.5 0.5 0.5" />
                </primitive>

            <lodref id="lod1" />

            </children> 
        </node>

		<lod id="lod1">
            <!-- declare one or more descendants (representations); -->
            <!-- one descendent can be only a noderef; -->
            <!-- repeat as necessary -->
            <noderef id="tree2"  mindist="1.0"/>
        
        </lod>
    </graph> 
</yaf> 