<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 
	
    <globals background="1 1 1 1" ambient="0.2 0.2 0.2 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="10000.0" />

    <skybox
       size="1000 1000 1000"
       center="0 0 0"
       emissive="0 0 0 1.0"
       intensity="1"
       front="scenes/t07g08/textures/vz_sinister_front.png"
       back="scenes/t07g08/textures/vz_sinister_back.png"
       up="scenes/t07g08/textures/vz_sinister_up.png"
       down="scenes/t07g08/textures/vz_sinister_down.png"
       left="scenes/t07g08/textures/vz_sinister_left.png"
       right="scenes/t07g08/textures/vz_sinister_right.png" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0.0 0.0 0.0" /> 
        
        <perspective id="cam3"
            angle = "60"
            near = "0.1"
            far = "1000"
            location = "0 15 0"
            target = "0.0 0.0 0.0" />

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0.0 0.0 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="5" /> 
    </cameras> 

    <textures>        
        <texture id="carTex" filepath="scenes/t07g08/textures/black.jpg" />
        <texture id="roadTex" filepath="scenes/t07g08/textures/road.jpg" />
        <texture id="walkwayTex" filepath="scenes/t07g08/textures/walkway.jpg" />
        <texture id="walkwaybumpTex" filepath="scenes/t07g08/textures/walkwaybump.jpg" />
        <texture id="walkwayspecTex" filepath="scenes/t07g08/textures/walkwayspec.jpg" />
        <texture id="houseTex" filepath="scenes/t07g08/textures/house.jpg" />
        <texture id="roofTex" filepath="scenes/t07g08/textures/roof.jpg"/>
        <texture id="doorTex" filepath="scenes/t07g08/textures/door.jpg"/>
    </textures> 

    <materials> 
        <material id="carMaterial" 
            color="1 0 0 1.0" 
            emissive="0.0 0.0 0.0 1.0" 
			specular="0.5 0.5 0.5 1.0" 
            shininess="10"/>
        
        <material id = "roadMaterial" 
            color="1 1 1 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="roadTex" 
            texlength_s="1.5" 
            texlength_t="1" />

        <material id = "walkwayMaterial" 
            color="1 1 1 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="walkwayTex" 
            texlength_s="0.08" 
            texlength_t="5" 
            bumpref="walkwaybumpTex"
            bumpscale = "0.2"
            specularref="walkwayspecTex"/>

        <material id = "roadlightMaterial" 
            color="0.5 0.5 0.5 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" />

        <material id = "lightMaterial" 
            color="1.0 1.0 1.0 1.0" 
            emissive="1.0 1.0 1.0 1.0" 
			specular="1 1 1 1" 
            shininess="10" />

        <material id ="houseMaterial"
            color="1 1 1 1.0" 
            emissive="0.5 0.5 0.5 0.5" 
			specular="0 0 0 1" 
            shininess="10" 
            textureref="houseTex"/>

        <material id = "roofMaterial"
            color="1 1 1 1.0" 
            emissive="0 0 0 0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="roofTex"
            texlength_s="4" 
            texlength_t="0.9" 
            bumpref="scenes/t07g08/textures/roof-bump.jpg" bumpscale="0.3"/>
        
        <material id ="doorMaterial"
            color="1 1 1 1.0" 
            emissive="0 0 0 1" 
			specular="0 0 0 1" 
            shininess="10" 
            textureref="doorTex"/>
			
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
                
                <noderef id ="road" />
                <noderef id="walkway" />
                <noderef id="walkway-2" />
                <noderef id="road-light-1" />
                <noderef id="road-light-2" />
                <noderef id="road-light-3" />
                <noderef id="road-light-4" />
                <noderef id="house" />

                <directionallight id="dirLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="0.5"
                    castshadow="true"
                    position="-20 10 0" 
                    shadowright="20"
                    shadowleft="-20"
                /> 

                <directionallight id="dirLight-2" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="0.5"
                    castshadow="true"
                    position="20 10 0" 
                    shadowright="20"
                    shadowleft="-20"
                /> 
            </children> 
        </node>

        <node id="rect-light"> 

            <transforms>
				<translate value3="6 44 0" />
                <rotate value3="0 0 -40" />
            </transforms> 
            
            <materialref id="lightMaterial" />
            <children>   
                <primitive>          
                    <box xyz1="0 0 0" xyz2="0.5 7 1.5"/>
                </primitive> 
            </children> 
        </node>

        <node id="audi">
            <transforms>
                <translate value3="-2 0 0" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms>

            <materialref id ="carMaterial" />
            <children>
                <primitive>
                    <model3d filepath="scenes/t07g08/textures/audi.obj"/>
                </primitive>
            </children>
        </node>

        <node id="road">
            <transforms>
				<translate value3="0 0 20" />
				<rotate value3="-90 0 90" />
            </transforms> 

			<materialref id="roadMaterial" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="40 8" />
                </primitive>
            </children> 
        </node>

        <node id="walkway">
            <transforms>
				<translate value3="0.5 0.25 0" />
				<rotate value3="0 0 0" />
            </transforms> 

            <materialref id = "walkwayMaterial" />
            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="1.5 0.5 40" />
                </primitive>
            </children>
        </node>

        <node id="walkway-2">
            <transforms>
				<translate value3="-8.5 0.25 0" />
				<rotate value3="0 0 0" />
            </transforms> 

            <materialref id="walkwayMaterial" />
            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="1.5 0.5 40" />
                </primitive>
            </children>
        </node>
        
        <node id="road-light-base">
            <transforms>
				<translate value3="0 0 0" />
                <rotate value3="0 0 0" />
            </transforms> 
            <children>
                <primitive>
                    <cylinder base="5.6" top="2.3" height="10" slices="8" stacks="1"/>
                </primitive>
            </children>
        </node>

        <node id="road-light-rect">
            <transforms>
				<translate value3="0 20 0" />
                <rotate value3="0 0 0" />
            </transforms> 
            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="2 40 2"/>
                </primitive>
            </children>

        </node>

        <node id="road-light-arm">
            <transforms>
				<translate value3="3.85 44 0" />
                <rotate value3="0 0 -40" />
            </transforms> 


            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="2 13 2"/>
                </primitive>
            </children>

        </node>

        <node id="road-light-reference">
            <transforms>
				<translate value3="0 0 0" />
                <rotate value3="0 0 0" />
                <scale value3="0.1 0.1 0.1" />
            </transforms> 

            <materialref id="roadlightMaterial" />

            <children>
                <noderef id="road-light-base" />
                <noderef id="road-light-rect" />
                <noderef id="road-light-arm" />
                <noderef id="rect-light" />
            </children>

        </node>

        <node id="road-light-1">
            <transforms>
				<translate value3="0.5 1 -8" />
                <rotate value3="0 180 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id="road-light-reference" />
                <spotlight id="spotLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="50.0"
                    distance="50"
                    decay="1"
                    castshadow="true"
                    position="0.7 4.4 0" 
                    target="-4 1 -8"
                    penumbra="1.0"
                    angle="35.0" 
                /> 
            </children>

        </node>

        <node id="road-light-2">
            <transforms>
				<translate value3="-8.5 1 8" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id="road-light-reference" />
                <spotlight id="spotLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="50.0"
                    distance="50"
                    decay="1"
                    castshadow="true"
                    position="0.7 4.4 0" 
                    target="1 -4 8"
                    penumbra="1.0"
                    angle="35.0" 
                /> 
            </children>

        </node>

        <node id="road-light-3">
            <transforms>
				<translate value3="-8.5 1 -16" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id="road-light-reference" />
                <spotlight id="spotLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="50.0"
                    distance="50"
                    decay="1"
                    castshadow="true"
                    position="0.7 4.4 0" 
                    target="1 -4 -16"
                    penumbra="1.0"
                    angle="35.0" 
                /> 
            </children>

        </node>

        <node id="road-light-4">
            <transforms>
				<translate value3="0.5 1 16" />
                <rotate value3="0 180 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id="road-light-reference" />
                <spotlight id="spotLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="50.0"
                    distance="50"
                    decay="1"
                    castshadow="true"
                    position="0.7 4.4 0" 
                    target="-4 1 16"
                    penumbra="1.0"
                    angle="35.0" 
                /> 
            </children>

        </node>

        <node id="house">
            <transforms>
				<translate value3="-14.5 5 -1" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id = "house-box" />
                <noderef id = "house-roof" />
                <noderef id = "house-door" />
            </children>

        </node>

        <node id="house-box">
            <transforms>
				<translate value3="0 0 0" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <materialref id = "houseMaterial" />
            <children>
                <primitive >
                    <box xyz1="0 0 0" xyz2="10 10 10" />
                </primitive>
            </children>

        </node>

        <node id="house-roof">
            <transforms>
				<translate value3="0 6.5 0" />
                <rotate value3="0 45 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <materialref id = "roofMaterial" />

            <children>
                <primitive >
                    <cylinder base="8.5" top="4" height="3" slices="4" stacks="1"/>
                </primitive>
            </children>

        </node>
        
        <node id="house-door">
            <transforms>
				<translate value3="5.1 -5 0" />
                <rotate value3="0 90 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <materialref id = "doorMaterial" />

            <children>
                <primitive >
                    <rectangle xy1="0 0" xy2="3 5"/>
                </primitive>
            </children>

        </node>
			
    </graph> 
</yaf> 