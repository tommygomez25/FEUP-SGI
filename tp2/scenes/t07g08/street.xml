<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 
	
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="10000.0" />

    <skybox
       size="1000 1000 1000"
       center="0 0 0"
       emissive="0 0 0 1.0"
       intensity="1"
       front="scenes/t07g08/textures/black.jpg"
       back="scenes/t07g08/textures/black.jpg"
       up="scenes/t07g08/textures/black.jpg"
       down="scenes/t07g08/textures/black.jpg"
       left="scenes/t07g08/textures/black.jpg"
       right="scenes/t07g08/textures/black.jpg" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0.0 0.0 0.0" /> 
        
        <perspective id="cam3"
            angle = "60"
            near = "0.1"
            far = "1000"
            location = "0 15 0"
            target = "0.0 0.0 0.0" />

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0.0 0.0 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="5" /> 
    </cameras> 

    <textures>        
        <texture id="wallTex" filepath="scenes/t07g08/textures/caravaggio.jpg" 
            mipmaps="false" mipmap0="scenes/t07g08/textures/caravaggio.1024.jpg" 
            mipmap1="scenes/t07g08/textures/caravaggio.512.jpg" 
            mipmap2="scenes/t07g08/textures/caravaggio.256.jpg"
            mipmap3="scenes/t07g08/textures/caravaggio.128.jpg"
            mipmap4="scenes/t07g08/textures/caravaggio.64.jpg"
            mipmap5="scenes/t07g08/textures/caravaggio.32.jpg"
            mipmap6="scenes/t07g08/textures/caravaggio.16.jpg"
            mipmap7="scenes/t07g08/textures/caravaggio.8.jpg"/>

		<texture id="floorTex" filepath="scenes/t07g08/textures/floorTex.jpg" />
		<texture id="shelfTex" filepath="scenes/t07g08/textures/shelfTex.jpg" />
		<texture id="supportLegTex" filepath="scenes/t07g08/textures/supportLegTex.jpg" />
		<texture id="treeTex" filepath="scenes/t07g08/textures/treeTex.jpg" />
		<texture id="vaseTex" filepath="scenes/t07g08/textures/vaseTex.jpg" />
        <texture id="matTex" filepath="scenes/t07g08/textures/matTex.jpg" />
        <texture id="mirrorBallTex" filepath="scenes/t07g08/textures/mirrorBallTex.jpg" />
        <texture id="footballTex" filepath="scenes/t07g08/textures/fut.png" />
        <texture id="basketballTex" filepath="scenes/t07g08/textures/basketballTex.jpg" />
        <texture id="noIce" filepath="scenes/t07g08/textures/4_no_ice_clouds_mts_8k.jpg" />
        <texture id="elev_bump" filepath="scenes/t07g08/textures/elev_bump_16k.jpg" />
        <texture id="spec" filepath="scenes/t07g08/textures/spec.jpg" />
        <texture id="clouds" filepath="scenes/t07g08/textures/storm_clouds_8k.jpg" />
        <texture id="carTex" filepath="scenes/t07g08/textures/black.jpg" />
        <texture id="roadTex" filepath="scenes/t07g08/textures/road.jpg" />
        <texture id="walkwayTex" filepath="scenes/t07g08/textures/walkway.jpg" />
        <texture id="walkwaybumpTex" filepath="scenes/t07g08/textures/walkwaybump.jpg" />
        <texture id="walkwayspecTex" filepath="scenes/t07g08/textures/walkwayspec.jpg" />
    </textures> 

    <materials> 
        <material id="carMaterial" 
            color="1 0 0 1.0" 
            emissive="0.0 0.0 0.0 1.0" 
			specular="0.5 0.5 0.5 1.0" 
            shininess="10"/>
        
        <material id = "roadMaterial" 
            color="1 1 1 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="roadTex" 
            texlength_s="1.5" 
            texlength_t="1" />

        <material id = "walkwayMaterial" 
            color="1 1 1 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="walkwayTex" 
            texlength_s="0.08" 
            texlength_t="5" 
            bumpref="walkwaybumpTex"
            bumpscale = "0.2"
            specularref="walkwayspecTex"/>

        <material id = "roadlightMaterial" 
            color="0.5 0.5 0.5 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" />

        
			
    </materials> 

    <graph rootid="scene"> 
		
		<node id="scene"> 
            <children> 
                
                <noderef id ="road" />
                <noderef id="walkway" />
                <noderef id="walkway-2" />
                <noderef id="road-light-1" />
                <noderef id="audi" />
                
                <directionallight id="dirLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="1"
                    castshadow="true"
                    position="-20 10 0" 
                    shadowright="20"
                    shadowleft="-20"
                /> 
            </children> 
        </node>

        <node id="audi">
            <transforms>
                <translate value3="-2 0 0" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms>

            <materialref id ="carMaterial" />
            <children>
                <primitive>
                    <model3d filepath="scenes/t07g08/textures/audi.obj"/>
                </primitive>
            </children>
        </node>

        <node id="road">
            <transforms>
				<translate value3="0 0 20" />
				<rotate value3="-90 0 90" />
            </transforms> 

			<materialref id="roadMaterial" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="40 8" />
                </primitive>
            </children> 
        </node>

        <node id="walkway">
            <transforms>
				<translate value3="0.5 0.25 0" />
				<rotate value3="0 0 0" />
            </transforms> 

            <materialref id = "walkwayMaterial" />
            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="1.5 0.5 40" />
                </primitive>
            </children>
        </node>

        <node id="walkway-2">
            <transforms>
				<translate value3="-8.5 0.25 0" />
				<rotate value3="0 0 0" />
            </transforms> 

            <materialref id="walkwayMaterial" />
            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="1.5 0.5 40" />
                </primitive>
            </children>
        </node>
        
        <node id="road-light-base">
            <transforms>
				<translate value3="0 0 0" />
                <rotate value3="0 0 0" />
            </transforms> 


            
            <children>
                <primitive>
                    <cylinder base="5.6" top="2.3" height="10" slices="8" stacks="1"/>
                </primitive>
            </children>
        </node>

        <node id="road-light-rect">
            <transforms>
				<translate value3="0 20 0" />
                <rotate value3="0 0 0" />
            </transforms> 



            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="2 40 2"/>
                </primitive>
            </children>

        </node>

        <node id="road-light-arm">
            <transforms>
				<translate value3="3.85 44 0" />
                <rotate value3="0 0 -40" />
            </transforms> 


            <children>
                <primitive>
                    <box xyz1="0 0 0" xyz2="2 13 2"/>
                </primitive>
            </children>

        </node>

        <node id="road-light-reference">
            <transforms>
				<translate value3="0 0 0" />
                <rotate value3="0 0 0" />
                <scale value3="0.1 0.1 0.1" />
            </transforms> 

            <materialref id="roadlightMaterial" />

            <children>
                <noderef id="road-light-base" />
                <noderef id="road-light-rect" />
                <noderef id="road-light-arm" />
            </children>

        </node>

        <node id="road-light-1">
            <transforms>
				<translate value3="-8.5 1 0" />
                <rotate value3="0 0 0" />
                <scale value3="1 1 1" />
            </transforms> 

            <children>
                <noderef id="road-light-reference" />
                <spotlight id="spotLight" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="100.0"
                    distance="50"
                    decay="1"
                    castshadow="true"
                    position="0.7 4.4 0" 
                    target="-4 -1 0"
                    penumbra="1.0"
                    angle="60.0" 
                /> 
            </children>

        </node>
			
    </graph> 
</yaf> 